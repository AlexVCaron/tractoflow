params.output_dir = false

process {
    publishDir = {"./preprocess/$dir_id/"}
    scratch = true
    stageInMode = 'copy'
    stageOutMode = 'rsync'
    tag = { "$sid" }
}

params {
    flipx = false
    flipy = false
    flipz = false
}

if(params.output_dir) {
    process.publishDir = {"$params.output_dir/$dir_id/"}
}
